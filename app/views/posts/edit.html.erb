<%=turbo_frame_tag "editModal" do%>
  <div class="editModal">
    <div>
       <h3>Edit Post</h3>
      <%=form_with model: @post do |form|%>
        <%=form.label :caption%>
        <%=form.text_field :caption%>
        <%=form.label :location%>
        <%=form.text_field :location%>
        <%=form.submit class:"btn btn-primary" %>
      <%end%>
    </div>
    <div>
       <%=link_to "Close","#",data:{
      controller: "edit-modal",
      action: "edit-modal#close"
    },class:"btn btn-secondary"%>
    </div>
  </div>
<%end%>
