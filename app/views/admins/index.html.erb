<div class="main">
    <div class="container">
        <%=link_to "Sign Out",destroy_account_session_path(),data:{turbo_method: :delete},class:"btn btn-outline-danger",id:"AdminSignOut"%>
        <div class="row">
            <div class="col lg-4">
                  <h1>ADMIN PORTAL</h1>
            </div>
        </div>
        <div class="row">
            <div class="col lg-4">
                  <h1>Posts</h1>
            </div>
            <div class="col lg-4">
                  <h1>Accounts</h1>
            </div>
        </div>
         <div class="row">
            <div class="col lg-4" >
              <%@profiles.each do |profile|%>
                      <%@posts.each do |post|%>
                          <%if profile.posts.count>0 && post.profile_id==profile.id%>
                              <div id="eachPost">
                                <%=image_tag profile.profile_picture.representation(resize_to_limit: [250, 250]),class: "post_img"%>
                                <%=link_to "#{profile.user_name}",profile_path(profile.id),class:"btn btn primary"%>
                                  <%if post.image.representable?%>
                                    <%=image_tag post.image.representation(resize_to_limit: [100, 100])%>
                                  <%end%>
                                  <%=post.caption%>
                                  <%=post.location%>
                              </div>
                          <% end %>
                  <%end%>
                <%end%>
          </div>
          <div class="col lg-4">
                <%@accounts.each do |account|%>
                  <div id="eachAccount">
                    <%=account.email%>
                    <%if account.status=="activated"%>
                      <%=link_to "Deactivate",admins_de_activate_path(account),class:"btn btn-danger"%>
                    <%else%>
                      <%=link_to "Activate",admins_activate_path(account),class:"btn btn-success"%>
                    <%end%>
                  </div>
                <%end%>
          </div>
         </div>
    </div>
</div>
<style>
  .main{
    margin-top: 40px;
  }
  #AdminSignOut
  {
    float:right;
  }
   .post_img {
    width: 50px;
    height: 50px;
    object-fit: cover;
    border-radius: 50%;
    top:20px;
  }
   #eachPost
  {
    margin-bottom: 30px;
  }
   #eachAccount
  {
    margin-bottom: 30px;
  }
</style>
