<h1>Welcome <%=@profile.user_name%></h1>
<%=link_to "Home Page", root_path, class: "btn btn-primary"%>
<%=link_to "Followers: #{@followers}",new_post_path,data:{turbo_frame: "modal"},class:"btn btn primary"%>
<%=link_to "Following: #{@following}",new_post_path,data:{turbo_frame: "modal"},class:"btn btn primary"%>
<%=link_to "Posts: #{@post_count}",new_post_path,data:{turbo_frame: "modal"},class:"btn btn primary"%>
<h2>Profile Picture:</h2>
<%=image_tag @profile.profile_picture.representation(resize_to_limit: [100, 100]),class: "post_img"%>
<div id="posts">
    <%@posts.each do |x|%>
    <div>
      <%=x.caption%>
      <%=x.location%>
      <%if x.image.representable?%>
        <%=image_tag x.image.representation(resize_to_limit: [100, 100])%>
      <%end%>

    </div>
  <%end%>
</div>


<%=link_to  "Create a New Post",new_post_path,data:{turbo_frame: "modal"},class:"btn btn-primary"%>
<%= link_to "Sign Out",destroy_account_session_path(),data:{turbo_method: :delete},class:"btn btn-danger"%>

