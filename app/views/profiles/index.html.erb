<h1>Welcome <%=@profile.user_name%></h1>
<h2>Profile Picture:</h2>
<%=image_tag @profile.profile_picture.representation(resize_to_limit: [100, 100]),class: "post_img"%>
<%@posts.each do |x|%>
  <div>
    <%=x.caption%>
    <%=x.location%>
    <%=image_tag x.image.representation(resize_to_limit: [100, 100])%>
    <%= link_to "Post" ,posts_options_path(x.id),data:{turbo_frame: "PostModal"},class:"option-btn btn btn-secondary",remote: true%>
  </div>
<%end%>

<%=link_to  "Create a New Post",new_post_path,data:{turbo_frame: "modal"},class:"btn btn-primary"%>
<%= link_to "Sign Out",destroy_account_session_path(),data:{turbo_method: :delete},class:"btn btn-danger"%>

