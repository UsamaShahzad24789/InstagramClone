<div class="main">
  <div class="container">
    <h1 id="title">Welcome to Instagram<h1>


    <div id="signIn">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%# <%= f.label :email %><br />
         <label>Email</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control" ,placeholder:"xyz@gmail.com"%>
      </div>

      <div class="field">
        <%# <%= f.label :password %>
          <label>Password</label>
        <%= f.password_field :password, autocomplete: "current-password",class:"form-control" ,placeholder:"Enter Password"%>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" ,class: "btn btn-success" %>
      </div>
    <% end %>

    <%# <%= render "devise/shared/links" %>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name) ,class: "btn btn-primary"%><br />
    <% end %>
    </div>

  </div>
</div>
<style>
  .main{
    margin-top: 40px;
  }
  #title
  {
    text-align: center;
  }
</style>
